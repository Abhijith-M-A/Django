{% extends 'bgb.html' %}

{% block content %}
<style>
.button {
  background-color: #00004d;
  border: none;
  color: white;
  padding: 10px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  
  cursor: pointer;
  width : 125px;
  
  border-radius: 5px;
}
.button:hover {
background-color: #002060;
}
.button1 {
	margin: 12px 2px;
	position:relative; left:250px; top:65px;
}
.button2 {
	position:relative; left:-200px; top:2px;
	margin: 12px 2px;
}
</style>

<form action = {% url 'forth' %} method = "POST">{% csrf_token %}
	Enter the name of payer: &nbsp&nbsp&nbsp<input type = "text" name ="temp">
	&emsp; &emsp; &emsp; &emsp; <p style = "font-size : 7px"> Give no space </p>
	<br><br><br>
	Enter the paid amount: Rs.&nbsp<input type = "number" name ="temp1">
	<br><br><br>
{% if checkblank == 'True' %}
<div style ="color:red">{{ blankmsg }}</div>
{% endif %}


<input type ="submit" class="button button1" value = "OK" style="margin-left:0px;margin-left:auto">
</form>


<form action = {% url 'second' %} method = "POST">{% csrf_token %}
<input type ="submit" class = "button button2" value = "Back" >
</form>

{% endblock %}